-- init
function _init()
				scene = "menu"
    load_map()
    player = {x = 20, y = 100, dx = 0, dy = 0, score = 0, on_ground = false}
    gravity = 0.2
    jump_strength = -2.8
    move_speed = 1
    bullet_speed = 2
    bullets = {}
    treasures = {{x = 40, y = 40}, {x = 80, y = 24}}
    enemies = {{x = 50, y = 102, dir = 1},
    											{x = 40, y = 68, dir = -1}}
    exit = {x = 120, y = 120}
    enemframe = 10
    fly = 1
    stones = {}
    
end

function _update()
			if scene == "menu" then
				menu_on()
			elseif scene=="game" then
    game_on()
   end
end

function _draw()
		 if scene=="menu" then
        draw_menu()
   elseif scene=="game" then
        draw_game()
   end 
end

function load_map()
    if scene=="menu" then
        map(0, 0, 0, 0, 16, 16)
   elseif scene=="game" then
        map(0, 0, 0, 0, 16, 16)
   end
    
end



function draw_map()
    
    if scene=="menu" then
        map(19, 0, 0, 0, 16, 16)
   elseif scene=="game" then
        map(0, 0, 0, 0, 16, 16)
   end
   
end

